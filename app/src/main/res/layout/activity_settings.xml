<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.cs240.byu.familymap.main.activities.SettingsActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/tableRow"
        android:baselineAligned="false"
        android:visibility="visible"
        android:elevation="3dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="53dp"
            android:text="Life Story Lines"
            android:id="@+id/textView5"
            android:textSize="30dp"
            android:layout_weight="0.45"
            android:width="200dp"
            android:textColor="#000000"/>

        <Spinner
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/lifeSpinner"
            android:spinnerMode="dropdown"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lifeSwitch"
            android:layout_weight="0.26"
            android:width="40dp"
            android:checked="false"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/tableRow2"
        android:elevation="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:text="Family Tree Lines"
            android:id="@+id/textView6"
            android:textSize="30dp"
            android:layout_weight="0.33"
            android:width="230dp"
            android:textColor="#000000"/>

        <Spinner
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/familyTreeSpinner"
            android:spinnerMode="dropdown"
            android:layout_weight="0.05"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/familyTreeSwitch"
            android:checked="false"
            android:layout_weight="0.27"
            android:width="40dp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow2"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/tableRow3"
        android:elevation="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:text="Spouse Lines"
            android:id="@+id/textView7"
            android:textSize="30dp"
            android:width="200dp"
            android:layout_weight="0.44"
            android:textColor="#000000"/>

        <Spinner
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/spouseSpinner"
            android:spinnerMode="dropdown"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spouseSwitch"
            android:checked="false"
            android:layout_weight="0.27"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow3"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/tableRow4"
        android:elevation="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:text="Map Type"
            android:id="@+id/textView8"
            android:textSize="30dp"
            android:layout_weight="0.92"
            android:textColor="#000000"/>

        <Spinner
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/mapSpinner"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow4"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:id="@+id/resyncRow"
        android:elevation="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:text="Re-sync Data"
            android:id="@+id/textView9"
            android:textSize="30dp"
            android:textColor="#000000"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resyncRow"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:id="@+id/logoutRow"
        android:elevation="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:text="Logout"
            android:id="@+id/textView10"
            android:textColor="#000000"
            android:textSize="30dp"/>
    </TableRow>

</RelativeLayout>
